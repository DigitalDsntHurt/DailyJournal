<h1 align="center">All Consumables</h1>
<table>
  <thead>
    <tr>
      <th>Consumed at</th>
      <th>Consumption type</th>
      <th>Quantity</th>
      <th>Units</th>
      <th>Item1</th>
      <th>Item2</th>
      <th>Item3</th>
      <th>Item4</th>
      <th>Item5</th>
      <th>Item6</th>
      <th>Item7</th>
      <th>Item8</th>
      <th>Item9</th>
      <th>Item10</th>
      <th>Notes</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumables.order(consumed_at: :desc).each do |consumable| %>
      <tr>
        <td><%= consumable.consumed_at %></td>
        <td><%= consumable.consumption_type %></td>
        <td><%= consumable.quantity %></td>
        <td><%= consumable.units %></td>
        <td><%= consumable.item1 %></td>
        <td><%= consumable.item2 %></td>
        <td><%= consumable.item3 %></td>
        <td><%= consumable.item4 %></td>
        <td><%= consumable.item5 %></td>
        <td><%= consumable.item6 %></td>
        <td><%= consumable.item7 %></td>
        <td><%= consumable.item8 %></td>
        <td><%= consumable.item9 %></td>
        <td><%= consumable.item10 %></td>
        <td><%= consumable.notes %></td>
        <td><%= link_to 'Show', consumable %></td>
        <td><%= link_to 'Kill', consumable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

