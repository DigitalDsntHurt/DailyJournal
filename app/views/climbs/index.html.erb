<p id="notice"><%= notice %></p>

<h1>Climbs</h1>

<table>
  <thead>
    <tr>
      <th>V0s</th>
      <th>V1s</th>
      <th>V2s</th>
      <th>V3s</th>
      <th>V4s</th>
      <th>V5s</th>
      <th>V6s</th>
      <th>V7s</th>
      <th>V8s</th>
      <th>V9s</th>
      <th> &nbsp; total &nbsp; </th>
      <th> &nbsp; v-total &nbsp; </th>
      <th>Notes/Other</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @climbs.order(created_at: :desc).each do |climb| %>
      <tr>
        <td><%= climb.v0s %></td>
        <td><%= climb.v1s %></td>
        <td><%= climb.v2s %></td>
        <td><%= climb.v3s %></td>
        <td><%= climb.v4s %></td>
        <td><%= climb.v5s %></td>
        <td><%= climb.v6s %></td>
        <td><%= climb.v7s %></td>
        <td><%= climb.v8s %></td>
        <td><%= climb.v9s %></td>
        <td> &nbsp; <%= climb.total %> &nbsp; </td>
        <td> &nbsp; <%= climb.v_total %> &nbsp; </td>
        <td> &nbsp; <%= climb.other %> &nbsp; </td>
        <td><%= link_to 'Show', climb %></td>
        <td><%= link_to 'Edit', edit_climb_path(climb) %></td>
        <td><%= link_to 'Destroy', climb, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

