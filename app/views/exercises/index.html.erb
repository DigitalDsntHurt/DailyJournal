<p id="notice"><%= notice %></p>

<h1>Exercises</h1>
<br>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-2" align="right">
        <%= link_to "kettlebell", '/exercises/kettlebell' %>
      </div>
      <div class="col-sm-2" align="right">
        <%= link_to "run", '/exercises/run' %>
      </div>
      <div class="col-sm-2" align="right">
        <%= link_to "core", '/exercises/core' %>
      </div>
      <div class="col-sm-2" align="right">
        <%= link_to "stretch", '/exercises/stretch' %>
      </div>
      <div class="col-sm-2" align="right">&nbsp;</div>
      <div class="col-sm-2" align="right">&nbsp;</div>
      <div class="col-sm-2" align="right">&nbsp;</div>
      <div class="col-sm-2" align="right">&nbsp;</div>
    </div>
      
    </div>
  </div>
<br><br><br><br><br><br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Time</th>
      <th>Reps</th>
      <th>Lbs</th>
      <th>Occurrence time</th>
      <th>Occurrence date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.name %></td>
        <td><%= exercise.time %></td>
        <td><%= exercise.reps %></td>
        <td><%= exercise.lbs %></td>
        <td><%= exercise.occurrence_time %></td>
        <td><%= exercise.occurrence_date %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

