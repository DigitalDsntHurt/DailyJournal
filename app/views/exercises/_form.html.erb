
<div class="row">
  <div class="col-lg-8 box">
    <%= form_for(exercise) do |f| %>
      <% if exercise.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

          <ul>
          <% exercise.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <table>
        <tr>
          <td width="25%">
            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
          </td>
          <td width="75%">
            <div class="field">
              <%= f.label :description %>
              <%= f.text_field :description %>
            </div>            
          </td>
        </tr>
      </table>  
      <table>  
        <tr>
          <td width="10%">
            <div class="checkbox">
              <label>
                 Done? <%= f.check_box :done %>
              </label>
            </div>            
          </td>
          <td width="90%">
            <div class="field">
              <%= f.label :notes %>
              <%= f.text_field :notes %>
            </div>            
          </td>
        </tr>
      </table>
      <table>
        <tr>
          <td width="50%">
            <div class="field">
              <%= f.label :planned_time %>
              <%= f.datetime_select :planned_time, include_blank: true %>
            </div>            
          </td>
          <td width="50%">
            <div class="field">
              <%= f.label :occurrence_time %>
              <%= f.datetime_select :occurrence_time, include_blank: true %>
            </div>            
          </td>          
        </tr>
      </table>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>