<h2 class="journal-dash">Morning Ritual</h2>
<%= form_for(morning_ritual) do |f| %>
  <% if morning_ritual.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(morning_ritual.errors.count, "error") %> prohibited this morning_ritual from being saved:</h2>

      <ul>
      <% morning_ritual.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <table>
    <tr>
      <td><%= f.check_box :exercise %> exert?</td>
      <td><%= f.check_box :brush %> brush?</td>
      <td><%= f.check_box :protein %> protein?</td>
      <td><%= f.check_box :drink_water %> water?</td>
    </tr>
    <tr>
      <td><%= f.check_box :journal %> journal?</td>
      <td><%= f.check_box :read %> read?</td>
      <td><%= f.check_box :meditate %> meditate?</td>
      <td><%= f.check_box :happy %> happy?</td>
    </tr>
  </table>

  <table width="100%">
    <tr>
      <td align="right">
        <%= f.label :waketime %>
      </td>
      <td><%= f.time_select :waketime %></td>
      <td>
        <div class="actions">
          <%= f.submit %>
        </div>
      </td>
    </tr>
  </table>
  </div>
  
<% end %>
