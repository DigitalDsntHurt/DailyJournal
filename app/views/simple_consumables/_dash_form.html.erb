<%= form_for(simple_consumable) do |f| %>
  <% if simple_consumable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(simple_consumable.errors.count, "error") %> prohibited this simple_consumable from being saved:</h2>

      <ul>
      <% simple_consumable.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-2 field">
      <%= f.label :on_diet? %>
      <%= f.check_box :on_diet %>          
    </div>
    <div class="col-sm-2 field">
      <%= f.label :type %>
      <%= f.select :consumable_type, options_for_select(["meal","snack","drink"]) %>          
    </div>
    <div class="col-lg-8 field">
      <%= f.label :occurrence_time %>
      <%= f.datetime_select :occurrence_time %>          
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="col-sm-2 actions">
      <br/><br/>
      <%= f.submit %>
    </div>
  </div>
</div>


<% end %>
